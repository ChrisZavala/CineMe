<form id="signup-form" class="box container is-fluid py-1">
    <h2 class="has-text-centered has-text-weight-bold is-size-4 my-4">
        Sign Up
    </h2>
    <div class="field">
        <label for="username-signup" class="label">Username</label>
        <div class="control">
            <input id="username-signup" type="text" class="input is-rounded"/>
        </div>
    </div>
    <div class="field">
        <label for="email-signup" class="label">Email</label>
        <div class="control">
            <input id="email-signup" type="text" class="input is-rounded"/>
        </div>
    </div>
    <div class="field">
        <label for="password-signup" class="label">Password</label>
        <div class="control">
            <input id="password-signup" type="password" class="input is-rounded"/>
        </div>
        <div class="icon-text mt-2">
            <span class="icon has-text-info">
                <i class="fas fa-info-circle"></i>
            </span>
            <span>Password must be at least 4 characters</span>
        </div>
    </div>
    <button type="submit" class="mt-4 button is-info is-rounded is-fullwidth">
        Sign Up!
    </button>
    <div class="mt-5 mb-4 has-text-centered">
        Already have an account?
        <a href="/login" id="login-link">Login</a>
    </div>
</form>
<script src="/js/signup.js"></script>